# Production Environment Configuration Template
# Copy this file to .env.production and fill in the actual values

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=false
SECRET_KEY=your-super-secret-key-here-generate-with-openssl-rand-hex-32

# Server Configuration
HOST=0.0.0.0
PORT=5002
WORKERS=4

# Security Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
MAX_FILE_SIZE=104857600
RATE_LIMIT_PER_MINUTE=30
FILE_EXPIRY=86400

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key-here
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password-here
ADMIN_SECRET_KEY=your-admin-secret-key-here

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/docswap/app.log

# Database Configuration (if using local database)
DATABASE_URL=postgresql://user:password@localhost/docswap

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourdomain.com

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn-here
HEALTH_CHECK_TOKEN=your-health-check-token-here

# File Storage Configuration
UPLOAD_PATH=/var/docswap/uploads
OUTPUT_PATH=/var/docswap/output
TEMP_PATH=/var/docswap/temp

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/docswap/backups

# Performance Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security Headers Configuration
CSP_REPORT_URI=https://yourdomain.com/csp-report
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true

# API Rate Limiting
API_RATE_LIMIT_PER_HOUR=1000
UPLOAD_RATE_LIMIT_PER_HOUR=100
CONVERSION_RATE_LIMIT_PER_HOUR=50

# File Validation
ALLOWED_MIME_TYPES=application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document,image/jpeg,image/png
MAX_FILES_PER_USER=10
VIRUS_SCAN_ENABLED=false

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.